<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <files>
    <file>
   <source>src/main/bin/README</source>
      <outputDirectory>patchwork/</outputDirectory>
   <fileMode>644</fileMode>
      <filtered>true</filtered>
    </file>
    <file>
   <source>src/main/bin/patchwork.sh</source>
      <outputDirectory>patchwork/bin</outputDirectory>
  <!-- see http://jira.codehaus.org/browse/MASSEMBLY-173 -->
   <fileMode>755</fileMode>
      <filtered>true</filtered>
    </file>
    <file>
   <source>src/main/bin/controlgraph.sh</source>
      <outputDirectory>patchwork/bin</outputDirectory>
  <!-- see http://jira.codehaus.org/browse/MASSEMBLY-173 -->
   <fileMode>755</fileMode>
      <filtered>true</filtered>
    </file>
    <file>
   <source>src/main/bin/patchwork.bat</source>
      <outputDirectory>patchwork/bin</outputDirectory>
   <fileMode>644</fileMode>
      <filtered>true</filtered>
    </file>
    <file>
   <source>src/main/bin/dependencygraph.bat</source>
      <outputDirectory>patchwork/bin</outputDirectory>
   <fileMode>644</fileMode>
      <filtered>true</filtered>
    </file>
    <file>
   <source>src/main/bin/controlgraph.bat</source>
      <outputDirectory>patchwork/bin</outputDirectory>
   <fileMode>644</fileMode>
      <filtered>true</filtered>
    </file>
  </files>
 <fileSets>
  <!-- support files in bin directory -->
  <fileSet>
   <directory>src/main/bin</directory>
   <outputDirectory>patchwork/bin</outputDirectory>
   <includes>
    <include>*.*</include>
   </includes>
   <excludes>
    <exclude>README</exclude>
    <exclude>patchwork.sh</exclude>
    <exclude>patchwork.bat</exclude>
    <exclude>controlgraph.sh</exclude>
    <exclude>controlgraph.bat</exclude>
    <exclude>dependencygraph.bat</exclude>
  </excludes>
  </fileSet>
  <!-- the generated archive -->
  <fileSet>
   <directory>target</directory>
   <outputDirectory>patchwork/</outputDirectory>
      <includes>
    <include>*.jar</include>
   </includes>
   </fileSet>
 </fileSets>
 <dependencySets>
  <dependencySet>
      <outputDirectory>patchwork/lib</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
  </dependencySets>
</assembly>
